<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottom_layout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white"
            android:fillViewport="true"
            android:scrollbarStyle="outsideInset"
            android:scrollbars="horizontal|vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cmp_code"
                            style="@style/under_line_et"
                            android:focusable="false"

                            android:hint="Plant Code"
                            android:padding="7dp"
                            android:singleLine="true"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cmp_no"
                            style="@style/under_line_et"
                            android:focusable="false"
                            android:hint="Complaint No."

                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cmp_customer_name"
                            style="@style/under_line_et"
                            android:focusable="false"

                            android:hint="Customer Name"
                            android:padding="7dp"
                            android:singleLine="true"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cmp_cust_no"
                            style="@style/under_line_et"
                            android:focusable="false"
                            android:hint="Customer No."

                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/mat_no"
                            style="@style/under_line_et"
                            android:focusable="false"

                            android:hint="Material Code"
                            android:padding="7dp"
                            android:singleLine="true"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/cmp_date"
                            style="@style/under_line_et"
                            android:focusable="false"
                            android:hint="Complaint Date"
                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/mat_grp"
                            style="@style/under_line_et"
                            android:focusable="false"

                            android:hint="Material Group"
                            android:padding="7dp"
                            android:singleLine="true"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_tinny4"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/prod_date"
                            style="@style/under_line_et"
                            android:focusable="false"
                            android:hint="Production Date"

                            android:padding="7dp"
                            android:singleLine="true"
                            android:text="" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>


                <!--  item 1 -->
                <LinearLayout
                    android:id="@+id/item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/background_floating_material_light"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/serial_no"
                                style="@style/under_line_et"
                                android:focusable="false"
                                android:hint="Serial Number"
                                android:padding="7dp"
                                android:singleLine="true"

                                />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_tinny4"
                            android:layout_weight="1"

                            >

                            <EditText
                                android:id="@+id/item_no"
                                style="@style/under_line_et"
                                android:focusable="false"
                                android:hint="Item Number"
                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/prod_plant"
                                style="@style/under_line_et"

                                android:focusable="false"
                                android:hint="Production Plant"

                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/cmp_cls_date"
                                style="@style/under_line_et"
                                android:focusable="false"
                                android:hint="Complaint Close Date"
                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/reason"
                                style="@style/under_line_et"

                                android:focusable="false"
                                android:hint="Reason"

                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/cls_reason"
                                style="@style/under_line_et"
                                android:focusable="false"
                                android:hint="Close Reason"
                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/space_tinny4"
                            android:layout_weight="1">

                            <EditText
                                android:id="@+id/mat_desc"
                                style="@style/under_line_et"
                                android:focusable="false"
                                android:hint="Material Description"
                                android:padding="7dp"
                                android:singleLine="true" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingRight="10dp"
                            android:text="Last Action"
                            android:textSize="12sp" />


                        <EditText
                            android:id="@+id/lst_action"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:focusable="false"
                            android:hint="Last Action"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingBottom="5dp"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <TextView
                            android:id="@+id/cmp_images"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/colorPrimary"
                            android:padding="10dp"
                            android:text="Complaint Images"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="4dp"
                        android:paddingTop="4dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="3dp"
                            android:paddingRight="10dp"
                            android:text="Standard Reason"
                            android:textSize="12sp" />

                        <Spinner
                            android:id="@+id/cmp_stand_remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/array_stand_reason"
                            android:padding="8dp"
                            android:spinnerMode="dialog" />

                    </LinearLayout>


                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:hint="Review Remark..."
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="10"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:textColor="#000" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/save"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:gravity="center_horizontal"
                            android:padding="10dp"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textSize="17sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</LinearLayout>


