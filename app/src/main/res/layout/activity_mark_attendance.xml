<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/in_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="258dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/intime"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="     In    Attendance "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/out_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_attendance"
            android:layout_alignStart="@+id/in_attendance"
            android:layout_marginTop="50dp"
            android:background="@color/colorPrimary"
            android:drawableStart="@drawable/intime"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="     Out  Attendance "
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_intime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/in_attendance"
            android:layout_alignStart="@+id/in_attendance"
            android:layout_alignEnd="@+id/in_attendance"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_outtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/out_attendance"
            android:layout_alignStart="@+id/out_attendance"
            android:layout_alignEnd="@+id/out_attendance"
            android:background="@color/colorPrimary"
            android:clickable="false"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>