<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/cmp_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/material_no_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"

            android:textSize="15sp"
            android:text="Material No"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/material_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Material Name"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/material_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/material_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/cust_no_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Customer No."
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cust_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Customer Name"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/cust_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/cust_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/vendor_no_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Vendor No."
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/vendor_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Vendor Name"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:id="@+id/vendor_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/vendor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:weightSum="4">
        <TextView
            android:id="@+id/movetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Movement"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/qty1txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Quantity"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mslbqtytxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="MSLB Qty"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/freshqtytxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:textAlignment="center"
            android:text="Fresh Qty"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="4">

        <TextView
            android:id="@+id/move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/qty1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mslbqty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/freshqty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/black_border_text"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <Spinner
        android:id="@+id/movement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/ic_mendotry"
        android:spinnerMode="dialog" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Enter Quantity"
        android:textSize="14sp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="@string/btn_save_dsr"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold" />



</LinearLayout>
