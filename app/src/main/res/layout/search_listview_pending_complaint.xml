<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/cmpno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center"

            android:textColor="#0179b6"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/cmpdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right|center"

            android:textColor="#0179b6"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/customer_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmpno"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:text="Customer : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmpno"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/customer_name_txt"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/epc_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cmpdt"
            android:layout_alignParentEnd="true"
            android:gravity="end|center"
            android:textColor="#0179b6"
            android:layout_marginTop="8dp"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/cmppnddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/epc_txt"
            android:gravity="end|center"
            android:layout_marginTop="8dp"
            android:textColor="#FF0000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:text="Mobile    :"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/mobile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name"
            android:layout_alignTop="@+id/mobile_no"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/mobile_txt"
            android:textSize="1dp" />

        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/mobile_image"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/alt_mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_no"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:text="Alternate Mobile    :"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/alt_mobile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_no"
            android:layout_alignTop="@+id/alt_mobile_no"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/alt_mobile_txt"
            android:textSize="1dp" />

        <TextView
            android:id="@+id/alt_mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_no"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/alt_mobile_image"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alt_mobile_no"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:text="Address :"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alt_mobile_no"
            android:layout_gravity="left"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/address_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alt_mobile_no"
            android:layout_gravity="left"

            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/address_image"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/dealer_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_txt"
            android:layout_gravity="left"
            android:layout_marginTop="65dp"
            android:text="Dealer    : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/dealer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_txt"
            android:layout_gravity="left"
            android:layout_marginTop="65dp"
            android:layout_toRightOf="@+id/dealer_name_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/employee_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dealer_name"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:text="Reg.by   : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dealer_name"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/employee_name_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/comp_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_name_txt"
            android:layout_gravity="left"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:background="@layout/rounded_corner_blue"
            android:text=" Complaint Action "
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/comp_iss_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_name_txt"
            android:layout_alignStart="@+id/comp_dtl"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-95dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:background="@layout/rounded_corner_blue"
            android:text=" Issue Material  "
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comp_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_name_txt"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+id/comp_action"
            android:background="@layout/rounded_corner_blue"
            android:text=" Start   Complaint  "
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/comp_dtl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/employee_name_txt"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="3dp"
            android:background="@layout/rounded_corner_blue"
            android:text="View"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />

