<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/service_center_code_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center"
            android:text="Service Center :"
            android:textColor="#0179b6"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/service_center_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="left"
            android:layout_toRightOf="@+id/service_center_code_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/service_center_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_code"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"
            android:text="Name    :"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!--<TextView-->
        <!--android:id="@+id/mobile_image"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_below="@+id/service_center_code"-->
        <!--android:layout_toRightOf="@+id/mobile_txt"-->
        <!--android:layout_gravity="right"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="1dp"-->
        <!--android:layout_alignTop="@+id/service_center" />-->


        <TextView
            android:id="@+id/service_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_code"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"

            android:layout_toRightOf="@+id/service_center_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_txt"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:text="Address   : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_center_txt"
            android:layout_gravity="left"

            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/address_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/contact_person_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_txt"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"
            android:text="Contact Person : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/contact_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_txt"
            android:layout_gravity="left"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/contact_person_txt"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/mobile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_txt"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            android:text="Mobile    :"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customer_name"
            android:layout_alignTop="@+id/mobile_no"

            android:layout_gravity="right"
            android:layout_toRightOf="@+id/mobile_txt"
            android:textSize="1dp" />

        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_txt"
            android:layout_gravity="left"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/mobile_image"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/employee_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_person_txt"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:text="Ser.Employee   : "
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_person_txt"
            android:layout_gravity="left"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/employee_name_txt"

            android:textSize="15sp" />


        <TextView
            android:id="@+id/btn_survey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_name_txt"

            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <!--   </LinearLayout>-->

</LinearLayout>