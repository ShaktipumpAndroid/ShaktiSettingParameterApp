<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.DeviceComponentList">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/colorPrimary">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:text="@string/app_name"
                android:fontFamily="sans-serif-condensed-medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="center"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/imgBluetoothiconID"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_bluetooth_gray"
                    android:padding="@dimen/_10sdp"
                    />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/componentList"
        android:layout_below="@+id/appBarLayout"
        android:layout_above="@+id/lvlget_set_allID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal"
        android:id="@+id/lvlget_set_allID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlvGetAllViewID"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:text="Get All"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlvSetAllViewID"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="Set All"
                android:textColor="@color/white"
                android:textSize="@dimen/_18ssp" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/noDataFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="No Data Found"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:textSize="@dimen/_14sdp" />

</RelativeLayout>