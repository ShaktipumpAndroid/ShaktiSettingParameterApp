<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/cmpno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center"
        android:textColor="#0179b6"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_no_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"

            android:text="Customer No: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:layout_gravity="start"
            android:textColor="@color/black"

            android:textSize="14sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:weightSum="2"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"

            android:text="Customer Name : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"

            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/matnr_no_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"
            android:text="Material No: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/matnr_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/matnr_name_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"
            android:text="Material Name : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/matnr_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/move_nm_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"
            android:text="Movement : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/move_nm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/qty_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"
            android:text="Quantity : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:weightSum="2"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/mslbqty_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:layout_gravity="start"
        android:text="MSLB Quantity : "
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mslbqty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:textSize="14sp" />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:weightSum="2"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/fresh_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="start"
            android:text="Fresh Quantity : "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/freshqty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>